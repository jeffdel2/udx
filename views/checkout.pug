extends layout

block content
  .container
    h1 Checkout

    if cart.length
      ul
        each item in cart
          li #{item.name} - $#{item.price.toFixed(2)}
      hr
      h3 Total: $#{total.toFixed(2)}

      h2 Payment Information (Mock)
      form(action="/process-payment", method="POST")
        label(for="name") Cardholder Name:
        input#name(type="text", name="name", required)

        label(for="cardNumber") Card Number:
        input#cardNumber(type="text", name="cardNumber", required)

        label(for="expiry") Expiration Date:
        input#expiry(type="text", name="expiry", placeholder="MM/YY", required)

        label(for="vendor") Payment Vendor:
        select#vendor(name="vendor", required)
          option(value="Visa") Visa
          option(value="MasterCard") MasterCard
          option(value="AmEx") American Express
          option(value="FunPay") FunPay (mock vendor)

        button(type="submit") Pay $#{total.toFixed(2)}
    else
      p Your cart is empty.
